{
  "openapi": "3.0.1",
  "info": {
    "title": "yatt.WorkItems.Api | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/api/workitems": {
      "get": {
        "tags": [
          "WorkItems"
        ],
        "description": "Get full list of work items",
        "operationId": "getAllWorkItems",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WorkItemRequestModel"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "WorkItems"
        ],
        "description": "Add new work items. If work item already exists, Conflict status code is returned",
        "operationId": "addWorkItem",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WorkItemRequestModel"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WorkItemRequestModel"
                }
              }
            }
          },
          "409": {
            "description": "Conflict"
          }
        }
      }
    },
    "/api/workitems/{id}": {
      "get": {
        "tags": [
          "WorkItems"
        ],
        "description": "Get a single work item or not found",
        "operationId": "getWorkItemById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WorkItemRequestModel"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "tags": [
          "WorkItems"
        ],
        "description": "Update all properties of a work item",
        "operationId": "updateWorkItem",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WorkItemRequestModel"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "tags": [
          "WorkItems"
        ],
        "description": "Remove work item",
        "operationId": "removeWorkItem",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WorkItemRequestModel": {
        "required": [
          "id",
          "title"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Identifier of the work item",
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "description": "Brief description of the work item"
          },
          "details": {
            "type": "string",
            "description": "Detailed description of the work item",
            "nullable": true
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "WorkItems"
    }
  ]
}